{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true, //without this the "dom" and the "webworker" libs conflict

    "resolveJsonModule": true,
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine",
      "@angular/localize"
    ],
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ],
}
